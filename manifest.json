{
  "manifest_version": 3,
  "name": "Melodytype Embed",
  "version": "1.0",
  "description": "Embeds Melodytype.com into Monkeytype.com",
  "icons": {
  },
  "content_scripts": [
    {
      "matches": ["*://*.monkeytype.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    },
    {
      "matches": ["*://*.melodytype.com/*"],
      "js": ["iframe-content.js"],
      "all_frames": true
    }
  ],
  "host_permissions": [
    "*://*.melodytype.com/*"
  ],
  "web_accessible_resources": [{
    "resources": ["styles.css", "iframe-styles.css"],
    "matches": ["<all_urls>"]
  }]
}
